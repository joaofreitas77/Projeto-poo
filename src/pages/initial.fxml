<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx">
    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="20" left="40" right="40" bottom="20"/>
            </padding>

            <!-- Texto -->
            <VBox spacing="5">
                <Label text="Seja bem vindo(a) à"
                       style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label text="DC Barbearia"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            </VBox>
        </HBox>
    </top>

    <!-- CENTRO: Lista -->
    <center>
        <VBox spacing="30">
            <padding><Insets left="60" right="60" top="20" bottom="20"/></padding>

            <Label text="Serviços"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <!-- SERVIÇO 1 -->
            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-border-color: #e5e5e5; -fx-border-width: 1;
                         -fx-border-radius: 6; -fx-background-radius: 6;">

                <VBox spacing="5">
                    <Label text="Corte + Barba"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="30min"
                           style="-fx-font-size: 14px; -fx-text-fill: #777;" />
                    <Label text="a partir de R$ 40,00"
                           style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                </VBox>

                <!-- empurra o botão pra direita -->
                <HBox HBox.hgrow="ALWAYS"/>

                <Button text="Reservar"
                        style="-fx-background-color: #f9eecb; -fx-padding: 8 20;
                               -fx-font-weight: bold; -fx-border-color: #d8c999;
                               -fx-background-radius: 5;"/>
            </HBox>

            <!-- SERVIÇO 2 -->
            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-border-color: #e5e5e5; -fx-border-width: 1;
                         -fx-border-radius: 6; -fx-background-radius: 6;">

                <VBox spacing="5">
                    <Label text="Barba"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="30min"
                           style="-fx-font-size: 14px; -fx-text-fill: #777;" />
                    <Label text="a partir de R$ 20,00"
                           style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                </VBox>

                <HBox HBox.hgrow="ALWAYS"/>

                <Button text="Reservar"
                        style="-fx-background-color: #f9eecb; -fx-padding: 8 20;
                               -fx-font-weight: bold; -fx-border-color: #d8c999;
                               -fx-background-radius: 5;"/>
            </HBox>

            <!-- SERVIÇO 3 -->
            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-border-color: #e5e5e5; -fx-border-width: 1;
                         -fx-border-radius: 6; -fx-background-radius: 6;">

                <VBox spacing="5">
                    <Label text="Corte"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="40min"
                           style="-fx-font-size: 14px; -fx-text-fill: #777;" />
                    <Label text="a partir de R$ 25,00"
                           style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                </VBox>

                <HBox HBox.hgrow="ALWAYS"/>

                <Button text="Reservar"
                        style="-fx-background-color: #f9eecb; -fx-padding: 8 20;
                               -fx-font-weight: bold; -fx-border-color: #d8c999;
                               -fx-background-radius: 5;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
